<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="seoft.co.kr.android_poc">

    <permission android:name="seoft.co.kr.android_poc.data.PersonContentProvider.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="seoft.co.kr.android_poc.data.PersonContentProvider.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.PersonContentProvider"
            android:authorities="seoft.co.kr.android_poc.data.PersonContentProvider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="seoft.co.kr.android_poc.data.PersonContentProvider.READ_DATABASE"
            android:writePermission="seoft.co.kr.android_poc.data.PersonContentProvider.WRITE_DATABASE"/>

    </application>

</manifest>
